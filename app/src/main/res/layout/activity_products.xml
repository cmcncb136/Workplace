<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_black"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="left"
    >

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/searchContext"
                android:layout_width="match_parent"
                android:layout_height="65dp"

                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"

                android:drawablePadding="30dp"

                android:backgroundTint="@color/box_black"
                android:background="@drawable/button_frame_round"
                android:backgroundTintMode="add"

                android:paddingHorizontal="10dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
                app:layout_constraintTop_toTopOf="@id/searchContext"
                app:layout_constraintBottom_toBottomOf="@id/searchContext"
                app:layout_constraintRight_toRightOf="@id/top_linearlayout"
                android:layout_marginRight="15dp"
                android:src="@drawable/search"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
            android:id="@+id/movieLinearlayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@+id/top_linearlayout"
    >

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
            >

            <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/movieTop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/productstype_move"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="Moive"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="30dp"
                    />

                </LinearLayout>
                <ListView
                        android:transcriptMode="disabled"
                        android:id="@+id/products_movie"
                        android:layout_marginTop="10dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                />

                <LinearLayout
                        android:id="@+id/BookTop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="Book"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="30dp"
                    />


                </LinearLayout>
                <ListView
                        android:transcriptMode="disabled"
                        android:id="@+id/products_book"
                        android:layout_marginTop="10dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                />

                <LinearLayout
                        android:id="@+id/MusicTop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="Music"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="30dp"
                    />

                </LinearLayout>
                <ListView
                        android:transcriptMode="disabled"
                        android:id="@+id/products_music"
                        android:layout_marginTop="10dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                />
             </LinearLayout>

        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>