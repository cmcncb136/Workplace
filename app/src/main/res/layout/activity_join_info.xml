<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_black"

        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        >

    <androidx.constraintlayout.widget.Guideline
            android:id = "@+id/top_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

    <TextView
            android:id = "@+id/workplaceInfoTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="사업장 정보"
            android:textColor="@color/white"
            android:textSize="50dp"


            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/top_guide"
            app:layout_constraintTop_toTopOf="@+id/top_guide"
            />



    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/middle_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"/>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/middle_guide"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/joinFinishBtn"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:id="@+id/workplaceNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:text="사업자 번호"
                    android:textColor="@color/white"
                    android:textSize="20sp"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/workplaceNumEt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"

                    android:textColor="@color/white"
                    android:textColorHint="@color/box_frame_grey"
                    android:paddingLeft="25dp"

                    android:backgroundTint="@color/box_black"
                    android:background="@drawable/button_frame_round"
                    android:backgroundTintMode="add"

                    app:layout_constraintTop_toBottomOf="@id/workplaceNumTv"
                    app:layout_constraintLeft_toLeftOf="parent"/>


            <TextView
                    android:id="@+id/workplaceNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:text="사업장 이름"
                    android:textColor="@color/white"
                    android:textSize="20sp"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workplaceNumEt"
                    />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/workplaceNameEt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="25dp"

                    android:textColor="@color/white"
                    android:textColorHint="@color/box_frame_grey"


                    android:backgroundTint="@color/box_black"
                    android:background="@drawable/button_frame_round"

                    android:backgroundTintMode="add"

                    app:layout_constraintTop_toBottomOf="@id/workplaceNameTv"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:id="@+id/workplaceOwnerNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:text="사업자 이름"
                    android:textColor="@color/white"
                    android:textSize="20sp"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workplaceNameEt"
                    />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/workplaceOwnerNameEt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="25dp"

                    android:textColor="@color/white"
                    android:textColorHint="@color/box_frame_grey"


                    android:backgroundTint="@color/box_black"
                    android:background="@drawable/button_frame_round"

                    android:backgroundTintMode="add"

                    app:layout_constraintTop_toBottomOf="@id/workplaceOwnerNameTv"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                    android:id="@+id/workplaceAddressTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:text="주소"
                    android:textColor="@color/white"
                    android:textSize="20sp"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workplaceOwnerNameEt"
                    />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/workplaceAddressEt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"

                    android:textColor="@color/white"
                    android:textColorHint="@color/box_frame_grey"
                    android:paddingLeft="25dp"

                    android:backgroundTint="@color/box_black"
                    android:background="@drawable/button_frame_round"

                    android:backgroundTintMode="add"

                    app:layout_constraintTop_toBottomOf="@id/workplaceAddressTv"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                    android:id="@+id/workplacePhoneTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:text="전화번호"
                    android:textColor="@color/white"
                    android:textSize="20sp"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workplaceAddressEt"
                    />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/workplacePhoneEt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"

                    android:textColor="@color/white"
                    android:textColorHint="@color/box_frame_grey"
                    android:paddingLeft="25dp"

                    android:backgroundTint="@color/box_black"
                    android:background="@drawable/button_frame_round"

                    android:backgroundTintMode="add"

                    app:layout_constraintTop_toBottomOf="@id/workplacePhoneTv"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                    android:id="@+id/workplaceCategoryTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:text="카테고리"
                    android:textColor="@color/white"
                    android:textSize="20sp"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workplacePhoneEt"
                    />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/workplaceCategoryEt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"

                    android:textColor="@color/white"
                    android:textColorHint="@color/box_frame_grey"

                    android:paddingLeft="25dp"
                    android:backgroundTint="@color/box_black"
                    android:background="@drawable/button_frame_round"
                    android:layout_marginBottom="20dp"

                    android:backgroundTintMode="add"

                    app:layout_constraintTop_toBottomOf="@id/workplaceCategoryTv"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/joinFinishBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="7dp"

            android:text="완료"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"

            android:background="@drawable/button_frame_round"
            android:backgroundTint="@color/green"
            android:backgroundTintMode="add"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />



</androidx.constraintlayout.widget.ConstraintLayout>