<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_black"

        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        >

    <androidx.constraintlayout.widget.Guideline
            android:id = "@+id/top_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

    <TextView
            android:id = "@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="SafeSpace"
            android:textColor="@color/white"
            android:textSize="50dp"


            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/top_guide"
            app:layout_constraintTop_toTopOf="@+id/top_guide"
            />

    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toTopOf="@+id/top_guide"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="20dp"
                android:text="Workplace"
                android:textColor="@color/white"

                app:layout_constraintTop_toBottomOf="@+id/titleTv"
                app:layout_constraintRight_toRightOf="@+id/titleTv"/>
        />
    </TableLayout>


    <androidx.constraintlayout.widget.Guideline
            android:id = "@+id/middle_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />


    <TextView
            android:id="@+id/emailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:text="Email"
            android:textColor="@color/white"
            android:textSize="15sp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/middle_guide"
            />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:singleLine="true"
            android:maxLines="1"


            android:hint="아이디를 입력해 주세요"
            android:textColor="@color/white"
            android:textColorHint="@color/box_frame_grey"
            android:drawableStart="@drawable/baseline_account_circle"
            android:drawablePadding="30dp"

            android:backgroundTint="@color/box_black"
            android:background="@drawable/button_frame_round"
            android:backgroundTintMode="add"

            app:layout_constraintTop_toBottomOf="@id/emailTv"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:id="@+id/pwTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:text="Password"
            android:textColor="@color/white"
            android:textSize="15sp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailEt"
            />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/pwEt"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:maxLines="1"

            android:hint="비밀번호를 입력해 주세요"
            android:textColor="@color/white"
            android:textColorHint="@color/box_frame_grey"


            android:backgroundTint="@color/box_black"
            android:background="@drawable/button_frame_round"
            android:drawableStart="@drawable/lock_grey"
            android:drawablePadding="30dp"

            android:backgroundTintMode="add"

            app:layout_constraintTop_toBottomOf="@id/pwTv"
            app:layout_constraintLeft_toLeftOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"

            android:text="Login"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"

            android:background="@drawable/button_frame_round"
            android:backgroundTint="@color/green"
            android:backgroundTintMode="add"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/joinBtn"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/joinBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"

            android:text="Join"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"

            android:background="@drawable/button_frame_round"
            android:backgroundTint="@color/red"
            android:backgroundTintMode="add"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/googleLoginBtn"
            />

    <com.google.android.gms.common.SignInButton
            android:id="@+id/googleLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />




</androidx.constraintlayout.widget.ConstraintLayout>